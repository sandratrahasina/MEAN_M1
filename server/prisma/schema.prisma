generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Compte {
  email String
  motDePasse String
}

model Admin {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  compte Compte
}

model Client {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  nom String
  prenom String
  adresse String
  photoUrl String
  compte Compte
  commandes Commande[]
}

model Livreur {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  nom String
  prenom String
  photoUrl String
  compte Compte
  livraisons Commande[]
}

model Restaurant {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  nom String
  adresse String
  description String
  photoUrl String
  compte Compte
  menus Menu[]
}

model Menu {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  photoUrl String
  nom String
  prix Int
  visible Boolean @default(true)
  restaurantId String @db.ObjectId
  restaurant Restaurant @relation(fields: [restaurantId], references: [id])
  commandeIds String[] @db.ObjectId
}

model Commande {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  date DateTime
  clientId String @db.ObjectId
  client Client @relation(fields: [clientId], references: [id])
  details CommandeDetails[]
  etat Etat @default(ATTENTE)
  livreurId String? @db.ObjectId
  livreur Livreur? @relation(fields: [livreurId], references: [id])
}

enum Etat {
  ATTENTE
  LIVREE
  ANNULEE
}

type CommandeDetails {
  // Since relations inside embedded documents are not supported yet
  // We'll have to implement the querying function ourself
  menuId String @db.ObjectId
  quantite Int @default(1)
}